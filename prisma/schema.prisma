// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Art {
  id            Int      @id @default(autoincrement())
  title         String   @unique
  description   String?
  image         String   
  
}
model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  name          String?
}

model Post {
  id            String     @default(cuid()) @id
  title         String
  content       String?
}